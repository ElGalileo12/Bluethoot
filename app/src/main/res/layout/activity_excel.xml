<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Blue_50"
    tools:context=".Excel">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-5dp"
        tools:layout_editor_absoluteY="4dp">

        <TextView
            android:id="@+id/er5"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnBuscar2"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:gravity="center"
            android:text="Registro de salida."
            android:textColor="#FF018786"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="49dp" />

        <TextView
            android:id="@+id/er4"
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnBuscar"
            android:layout_alignParentStart="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:text="Registro de entrada."
            android:textColor="#FF018786"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="59dp" />

        <Button
            android:id="@+id/btnBuscar"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:layout_below="@+id/er1"
            android:layout_alignParentStart="true"
            android:layout_marginStart="47dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/diseno"
            android:text="Buscar"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold"
            app:iconGravity="end"
            app:iconPadding="5dp"
            app:iconSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="50dp" />

        <Button
            android:id="@+id/btnBuscar2"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:layout_below="@+id/er2"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="42dp"
            android:background="@drawable/diseno"
            android:text="Buscar"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold"
            app:iconGravity="end"
            app:iconPadding="5dp"
            app:iconSize="20dp"
            app:iconTint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="50dp" />

        <TextView
            android:id="@+id/er1"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_below="@+id/edit_fecha"

            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:textColor="#CD0303"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/er2"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_below="@+id/edit_fecha2"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:textColor="#CD0303"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="16dp" />

        <EditText
            android:id="@+id/edit_fecha"
            android:layout_width="170dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="77dp"
            android:gravity="center"
            android:autofillHints=""
            android:clickable="false"
            android:ems="10"
            android:focusable="false"
            android:hint="Fecha de inicio"
            android:inputType="textPersonName"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="36dp" />

        <EditText
            android:id="@+id/edit_fecha2"
            android:layout_width="170dp"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:layout_marginTop="77dp"
            android:layout_marginEnd="17dp"
            android:autofillHints=""
            android:clickable="false"
            android:ems="10"
            android:focusable="false"
            android:hint="Fecha de fin"
            android:inputType="textPersonName"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="36dp" />

        <TextView
            android:id="@+id/pacitextView"
            android:layout_width="281dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="44dp"
            android:fontFamily="@font/aja2"
            android:gravity="center"
            android:scrollbars="horizontal"
            android:text="Buscador de registro."
            android:textDirection="ltr"
            android:textIsSelectable="false"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.444"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ListView
            android:id="@+id/rv_rangoE"
            android:layout_width="match_parent"
            android:layout_height="488dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="54dp"
            android:layout_marginBottom="-2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.307"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/er2"
            app:layout_constraintVertical_bias="0.105"
            tools:ignore="NotSibling" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:backgroundTint="@color/colorPrimaryDark"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:title="                 Buscador de Registro"
            app:titleTextColor="@color/white" />

        <ImageView
            android:id="@+id/imv_Volver"
            android:layout_width="40dp"
            android:layout_height="38dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/ic_arrow" />

        <TextView
            android:id="@+id/txRactivity"
            android:layout_width="353dp"
            android:layout_height="47dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="304dp"
            android:layout_marginEnd="26dp"
            android:textAlignment="center"
            android:textColor="#FF018786"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnGuardarExcel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="109dp"
            android:layout_marginTop="246dp"
            android:layout_marginEnd="109dp"
            android:text="Generar Excel" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>